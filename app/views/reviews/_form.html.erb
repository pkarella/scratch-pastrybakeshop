<%= render('layouts/errors', :object => @review) %>

<%= form_for [@product, @review] do |f| %>
<%= f.label :author %>
<%= f.text_field :author %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <%= f.label :rating %>
 <%= f.select :rating, [['1'],['2'],['3'],['4'],['5']] %>
  <p><%= f.submit %></p>
<% end %>
