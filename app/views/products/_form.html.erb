
<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description%>
  <%= f.text_field :description%>
  <%= f.label :cost %>
  <%= f.text_field :cost %>
  <%= f.label :avatar, class: 'col-sm-2 control-label'  %>
<%= f.file_field :avatar %>
  <%= f.submit  %>
<% end %>
