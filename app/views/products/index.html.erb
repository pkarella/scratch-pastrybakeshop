
<h1>Products</h1>

<div id="productpage" class="container-fluid">
  <div class="row">

<% if @products.any? %>
          <% @products.each do |product| %>
        <div class="col-sm-4 mb-3">
      <div class="card" style="width: 20rem;">
      <div class="card-block card-outline-primary mb-3 text-center">
      <p><%= image_tag(product.image, class: "img") %></p>
      <h4 class="card-title"><%= product.name %></h4>
      <p class="card-text"><%= product.description %></p>
      <p class="card-text"><%= number_to_currency product.cost %></p>
      <%= form_for @order_item do |f| %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.number_field :quantity %>
      <%= f.submit "Add to cart" %>
        <% end %>
      </div>
      <ul class="list-group list-group-flush">
        <li class="course-title"><%= link_to product.name, product_path(product) %></li>
      </ul>
      </div>

      </div>

      <% end %>
      <% else %>
      <h3>No products added yet.</h3>
      <% end %>


</div>
</div>
<% if current_user %>
<%= link_to "New Product", new_product_path %>
<% end %>
